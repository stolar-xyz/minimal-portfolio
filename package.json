{
  "name": "portfolio-minimal",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "husky",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "prod": "pnpm build && pnpm preview",
    "lint": "eslint \"**/*.{astro,js,ts}\" --fix",
    "lint:css": "stylelint \"**/*.css\" --fix --ignore-path .gitignore",
    "format": "prettier \"**/*.{astro,js,ts,css,md,svg,json}\" --write --log-level=warn",
    "fix": "pnpm lint; pnpm lint:css; pnpm format"
  },
  "lint-staged": {
    "*.{astro,js,ts}": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.{md,svg,json}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "ui",
          "core",
          "content"
        ]
      ]
    }
  },
  "validate-branch-name": {
    "pattern": "^preview|^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test)/(?=.*[a-z])[a-z0-9-]+$"
  },
  "dependencies": {
    "@astrojs/sitemap": "3.5.1",
    "@playform/compress": "0.2.0",
    "@tailwindcss/vite": "4.1.12",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "1.2.0",
    "astro": "5.13.3",
    "tailwindcss": "4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/compat": "1.3.2",
    "eslint": "9.34.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "stylelint": "16.23.1",
    "stylelint-config-standard": "39.0.0",
    "stylelint-prettier": "5.0.3",
    "typescript-eslint": "8.41.0",
    "validate-branch-name": "1.3.2"
  }
}
