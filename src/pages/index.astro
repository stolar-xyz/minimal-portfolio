---
import DownloadButton from '@/components/DownloadButton.astro';
import LanguageSwitcher from '@/components/LanguageSwitcher.astro';
import ScrollProgress from '@/components/ScrollProgress.astro';
import ScrollSpyNavigation from '@/components/ScrollSpyNavigation.astro';
import ThemeToggler from '@/components/ThemeToggler.astro';
import Layout from '@/layouts/Layout.astro';
import { pageSections } from '@/lib/consts';
---

<Layout>
  <div>
    <ThemeToggler />
    <DownloadButton fileName="CV-pl.pdf" />
    <DownloadButton fileName="CV-en.pdf" />
    <LanguageSwitcher />
    <ScrollSpyNavigation />
  </div>
  <ScrollProgress />
  {pageSections.map(({ id, label }) => <section id={id}>{label}</section>)}
</Layout>

<style>
  div {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
  }

  section {
    grid-column: span 6;
    min-height: 100vh;
    font-size: 3rem;
  }
</style>
